        </Setter>
    </Style>

    <Style x:Key="FooAppBarButtonStyle2" TargetType="local:AppBarButton" BasedOn="{StaticResource AppBarImageButtonStyle2}">
        <Setter Property="AutomationProperties.AutomationId" Value="FooAppBarButtonStyle"/>
        <Setter Property="AutomationProperties.Name" Value="Foo"/>
        <Setter Property="Content" Value="ms-appx:///Assets/Foo2.png"></Setter>
